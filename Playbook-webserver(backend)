# Backend webserver playbook use loacal index.html webpage 

- hosts: web
  tasks:
    - name: "Install httpd package" 
      package:
        name: "httpd"
        state: present

    - name: "install php package for .php webpage"
      package:
        name: "php"
        state: present

    - name: "Deploy local webpage"
      copy:
        src: "index.php"
        dest: "/var/www/html"

    - name: "start httpd webserver"
      service:
        name: "httpd"
        state: started
